@model IEnumerable<QLCHBanDienThoaiMoi.Models.DanhMucSanPham>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Quản lý danh mục</h2>
    </div>

    <!-- Form thêm nhanh danh mục -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-2">
                <div class="col-md-10">
                    <input type="text" class="form-control form-control-sm" placeholder="Tên danh mục" name="TenDanhMuc" required>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="fas fa-plus me-1"></i>Thêm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bảng danh sách -->
    <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-bordered table-hover rounded">
                <thead class="table-light">
                    <tr>
                        <th width="80%">Tên danh mục</th>
                        <th width="20%" class="text-center">Tùy chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.TenDanhMuc</div>
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-link btn-sm text-muted p-0" type="button"
                                            data-bs-boundary="viewport"
                                            data-bs-toggle="dropdown" title="Thao tác" style="border: none; background: none;">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end position-absolute">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit me-2"></i>Sửa
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-eye me-2"></i>Chi tiết
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="button" class="dropdown-item text-danger" title="Xóa"
                                                        onclick="confirmDelete(event,this, '@item.TenDanhMuc')">
                                                    <i class="fas fa-trash me-2"></i>Xóa
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="fas fa-folder fa-2x mb-3"></i>
            <p>Chưa có danh mục nào</p>
        </div>
    }
</div>