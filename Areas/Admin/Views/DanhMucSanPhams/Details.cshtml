@model QLCHBanDienThoaiMoi.Models.DanhMucSanPham

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết danh mục</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Thông tin danh mục</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold" width="30%">Tên danh mục:</td>
                            <td>
                                <h5 class="text-primary mb-0">@Model.TenDanhMuc</h5>
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">ID:</td>
                            <td class="text-muted">@Model.Id</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i>Danh sách
            </a>
        </div>
    </div>
</div>