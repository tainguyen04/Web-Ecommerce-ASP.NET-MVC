@model QLCHBanDienThoaiMoi.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="fas fa-edit me-2"></i>Chỉnh sửa khách hàng</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Edit" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4 p-3 bg-light rounded">
                        <h6 class="fw-bold text-muted mb-2"><i class="fas fa-id-card me-2"></i>Thông tin nhận dạng</h6>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary me-3">Mã KH: @Model.Id</span>
                            <small class="text-muted">Mã khách hàng không thể thay đổi</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenKhachHang" class="form-label fw-bold">Tên khách hàng <span class="text-danger">*</span></label>
                            <input asp-for="TenKhachHang" class="form-control" placeholder="Nhập tên khách hàng" required />
                            <span asp-validation-for="TenKhachHang" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="SoDienThoai" class="form-label fw-bold">Số điện thoại <span class="text-danger">*</span></label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" required />
                            <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập địa chỉ email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DiaChi" class="form-label fw-bold">Địa chỉ</label>
                        <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ đầy đủ"></textarea>
                        <span asp-validation-for="DiaChi" class="text-danger small"></span>
                    </div>

                    @if (Model.TaiKhoan != null)
                    {
                        <div class="mb-4 p-3 bg-info bg-opacity-10 rounded">
                            <h6 class="fw-bold text-info mb-2"><i class="fas fa-user-lock me-2"></i>Thông tin tài khoản</h6>
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <span class="badge bg-success me-2">Mã TK: @Model.TaiKhoan.Id</span>
                                    <span class="badge @(Model.TaiKhoan.TrangThai == TrangThaiTaiKhoan.Locked ? "bg-danger" : "bg-success")">
                                        @(Model.TaiKhoan.TrangThai == TrangThaiTaiKhoan.Locked ? "Đã khóa" : "Hoạt động")
                                    </span>
                                </div>
                                <small class="text-muted">Quản lý tài khoản ở mục riêng</small>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-2"></i>Xem chi tiết
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Cập nhật thông tin
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
