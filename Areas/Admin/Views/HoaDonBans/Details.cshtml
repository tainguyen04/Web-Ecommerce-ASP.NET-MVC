@model QLCHBanDienThoaiMoi.Models.HoaDonBan

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">
            <i class="fas fa-receipt"></i> Chi tiết hóa đơn #@Model.Id
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin chính -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Thông tin hóa đơn
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Mã hóa đơn:</dt>
                                <dd class="col-sm-8 fw-bold text-primary">#@Model.Id</dd>

                                <dt class="col-sm-4">Ngày bán:</dt>
                                <dd class="col-sm-8">@Model.NgayBan.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Khách hàng:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.KhachHang != null)
                                    {
                                        <span>@Model.KhachHang.TenKhachHang</span>
                                        <br />
                                        <small class="text-muted">@Model.KhachHang.SoDienThoai</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Khách vãng lai</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Nhân viên:</dt>
                                <dd class="col-sm-8">
                                    @Model.NhanVien?.TenNhanVien
                                    <br />
                                    <small class="text-muted">@Model.NhanVien?.SoDienThoai</small>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Tổng tiền:</dt>
                                <dd class="col-sm-8 fw-bold text-danger fs-5">
                                    @Model.TongTien.ToString("N0") ₫
                                </dd>

                                <dt class="col-sm-4">Thanh toán:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.PhuongThucThanhToan</span>
                                </dd>

                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @Html.Raw(EnumExtensions.GetBadgeHtml(Model.TrangThai))
                                </dd>

                                <dt class="col-sm-4">Địa chỉ nhận:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.DiaChiNhanHang))
                                    {
                                        @Model.DiaChiNhanHang
                                    }
                                    else if (Model.KhachHang != null)
                                    {
                                        @Model.KhachHang.DiaChi
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có thông tin</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Danh sách sản phẩm -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shopping-cart"></i> Danh sách sản phẩm
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="5%">#</th>
                                    <th width="45%">Sản phẩm</th>
                                    <th width="15%" class="text-center">Đơn giá</th>
                                    <th width="10%" class="text-center">Số lượng</th>
                                    <th width="20%" class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ChiTietHoaDonBans != null && Model.ChiTietHoaDonBans.Any())
                                {
                                    var stt = 1;
                                    foreach (var ct in Model.ChiTietHoaDonBans)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(ct.SanPham?.HinhAnh))
                                                    {
                                                        <img src="~/images/@ct.SanPham.HinhAnh"
                                                             alt="@ct.SanPham.TenSanPham"
                                                             class="me-3 rounded"
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@ct.SanPham?.TenSanPham</div>
                                                        <small class="text-muted">Mã: @ct.SanPhamId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@Html.FormatPrice(ct.GiaBan)</td>
                                            <td class="text-center">@ct.SoLuong</td>
                                            <td class="text-end fw-bold text-danger">
                                                @Html.FormatPrice(ct.ThanhTien)
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">
                                            <i class="fas fa-exclamation-circle"></i> Không có sản phẩm nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-active">
                                <tr>
                                    <td colspan="4" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold fs-5 text-danger">
                                        @Html.FormatPrice(Model.TongTien)
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar thông tin phụ -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history"></i> Lịch sử trạng thái
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Tạo hóa đơn</h6>
                                <p class="text-muted mb-0">@Model.NgayBan.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-invoice"></i> Thao tác
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
