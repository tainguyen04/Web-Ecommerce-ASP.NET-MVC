@model List<QLCHBanDienThoaiMoi.Services.ThongKeSanPhamDto>

@{
    ViewData["Title"] = "Top 3 sản phẩm bán chạy";
}

<h2 class="mb-4">Top 3 sản phẩm bán chạy</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng bán</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@item.TenSanPham</td>
                        <td>@item.TongSoLuong</td>
                    </tr>
                    stt++;
                }
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Chưa có sản phẩm bán.</div>
}
